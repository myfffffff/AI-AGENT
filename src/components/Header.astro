---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">首页</HeaderLink>
			<HeaderLink href="/blog">功能展示</HeaderLink>
			<HeaderLink href="/about">关于</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 1em 2em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	h2 {
		margin: 0;
		font-size: 1.5em;
		font-weight: 600;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--accent);
		transition: color 0.3s ease;
	}

	h2 a:hover {
		color: var(--accent-dark);
	}

	nav {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		align-items: center;
		position: relative;
	}

	.internal-links {
		display: flex;
		gap: 2em;
		align-items: center;
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
	}

	nav a {
		padding: 0.5em 1em;
		color: var(--black);
		border-bottom: 2px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
	}

	nav a:hover {
		color: var(--accent);
		border-bottom-color: var(--accent);
	}

	nav a.active {
		text-decoration: none;
		color: var(--accent);
		border-bottom-color: var(--accent);
	}

	@media (max-width: 720px) {
		header {
			padding: 1em;
		}
		
		nav {
			flex-direction: column;
			gap: 1em;
		}

		.internal-links {
			position: static;
			transform: none;
			gap: 1em;
		}
	}
</style>

